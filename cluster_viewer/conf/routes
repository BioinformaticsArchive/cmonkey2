# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /startrun                   controllers.Application.startrun
POST    /submitrun                  controllers.Application.submitrun
GET     /clusters/:iteration        controllers.Application.clusters(iteration: Int)
GET     /:iteration                 controllers.Application.index2(iteration: Int)
GET     /cluster/:iteration/:id     controllers.Application.cluster(iteration: Int, id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
